{
  "private": true,
  "name": "@topplethenun/taskr-packages-monorepo",
  "devDependencies": {
    "@commitlint/cli": "^4.2.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^21.2.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.6.1",
    "commitizen": "^2.9.6",
    "cz-lerna-changelog": "^1.2.1",
    "eslint": "^4.10.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "fs-extra": "^4.0.2",
    "husky": "^0.14.3",
    "istanbul-combine": "^0.3.0",
    "jest": "^21.2.1",
    "lerna": "^2.5.1",
    "lerna-semantic-release": "^9.1.0",
    "lint-staged": "^4.3.0",
    "prettier": "^1.7.4",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "bootstrap": "lerna clean --yes && lerna bootstrap --sort",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "commit": "git-cz",
    "commitmsg": "commitlint -e",
    "format": "lerna run prettier",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "precommit": "lint-staged",
    "prepush": "npm run lint && npm run test",
    "semantic-release": "lerna-semantic-release pre && lerna-semantic-release post && lerna-semantic-release perform",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "posttest:coverage": "node ./scripts/post-test-coverage.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
